{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types" // Only look here for type definitions
    ],
    "types": ["node", "express", "multer", "uuid"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}